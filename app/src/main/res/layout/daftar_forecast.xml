<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/listGambarStatus"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_clear"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/listWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:text="Kemarin"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/listGambarStatus"
        />
    <TextView
        android:id="@+id/listCuaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cerah"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/listGambarStatus"
        app:layout_constraintTop_toBottomOf="@id/listWaktu"
        app:layout_constraintStart_toStartOf="@id/listWaktu"
        />

    <TextView
        android:id="@+id/listSuhuSiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="16\u00B0" />

    <TextView
        android:id="@+id/listSuhuMalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4\u00B0"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listSuhuSiang"
        app:layout_constraintStart_toStartOf="@id/listSuhuSiang"
        app:layout_constraintEnd_toEndOf="@id/listSuhuSiang"
        />


</android.support.constraint.ConstraintLayout>